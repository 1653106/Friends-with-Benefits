<!--Add fund modal-->
    <div class="modal fade" id="addfundmodal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-custom text-white">
                    <h3 class="modal-title">ADD FUND</h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <form id="addfund" action="add-fund" method="POST">
                        <input type="number" name="fund" class="form-control my-2" placeholder="Enter amount of fund" min="10000" required>
                        <input type="password" name="password" class="form-control my-2" placeholder="Enter password" required>
                        <p style="text-align: end">
                            <input type="submit" class="btn btn-custom my-2" value="Add fund">
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>