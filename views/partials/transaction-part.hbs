<!--Info Part-->
    <div class="container my-4">
        <div class="row">
            <div class="col-sm-12 col-md-4" style="border-right-style: solid; border-right-color: #58c9ef">
                <div class="text-center" style="background: white">
                    <img class="img-thumbnail my-3" style="border-radius:10px" src="{{user.imagepath}}" alt="avatar" width="200px">
                    <div class="text-center mx-5 my-2" style=" border-style:solid; border-radius: 8px; background-color: white; border-color: #58c9ef; border-width: 1px ">
                        <div>Money spent</div>
                        <div>{{moneySpent}} VNĐ</div>
                    </div>
                    <div class="text-center mx-5 my-2" style=" border-style:solid; border-radius: 8px; background-color: white; border-color: #58c9ef; border-width: 1px ">
                        <div>Account balance</div>
                        <div>{{user.wallet}} VNĐ <button type="button" class="btn-hidden" data-toggle="modal" data-target="#addfundmodal"><i class="fa fa-plus-circle" style="color: #FFAD58"></i></button> </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-8">
                <div class="container">
                    <div class="row my-3">
                        <div class="col-sm-12 col-md-4">
                            <a href="settings-profile"><button type="button" class="btn btn-custom-primary-reverse" style="width: 80%">Profile</button></a>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <a href="settings-transaction"><button type="button" class="btn btn-custom" style="width: 80%">Transaction history</button></a>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <a href="settings-friend"><button type="button" class="btn btn-custom-primary-reverse" style="width: 80%">FRIEND Settings</button></a>
                        </div>
                    </div>

                    <!--Table-->
                    <div class="table-responsive text-nowrap">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Date created</th>
                                    <th scope="col">FRIEND's name</th>
                                    <th scope="col">Time (hour)</th>
                                    <th scope="col">Price/ hour</th>
                                    <th scope="col">Total price</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each transactions}}
                                <tr>
                                    <th scope="row">{{id}}</th>
                                    <td>{{createdAt}}</td>
                                    <td>{{Friend.User.name}}</td>
                                    <td>{{hours}}</td>
                                    <td>{{Friend.price}}</td>
                                    <td>{{totalprice}}</td>
                                    <td>{{status}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>