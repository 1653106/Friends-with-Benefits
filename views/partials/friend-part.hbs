<!--Info Part-->
    <div class="container my-4">
        <div class="row">
            <div class="col-sm-12 col-md-4" style="border-right-style: solid; border-right-color: #58c9ef">
                <div class="text-center" style="background: white">
                    <img class="img-thumbnail my-3" style="border-radius:10px" src="../images/avatar.jpeg" alt="avatar">
                    <div class="text-center mx-5 my-2" style=" border-style:solid; border-radius: 8px; background-color: white; border-color: #58c9ef; border-width: 1px ">
                        <div>Revenue per week</div>
                        <div>100.000 VNƒê</div>
                    </div>
                    <div class="text-center mx-5 my-2" style=" border-style:solid; border-radius: 8px; background-color: white; border-color: #58c9ef; border-width: 1px ">
                        <div>Average review</div>
                        <div>5/5</div>
                    </div>
                    <div class="text-center mx-5 my-2" style=" border-style:solid; border-radius: 8px; background-color: white; border-color: #58c9ef; border-width: 1px ">
                        <div>Reliability</div>
                        <div>80%</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-8">
                <div class="container">
                    <div class="row my-3">
                        <div class="col-sm-12 col-md-4">
                            <a href="settings-profile"><button type="button" class="btn btn-custom-primary-reverse" style="width: 80%">Profile</button></a>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <a href="settings-transaction"><button type="button" class="btn btn-custom-primary-reverse" style="width: 80%">Transaction history</button></a>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <a href="settings-friend"><button type="button" class="btn btn-custom" style="width: 80%">FRIEND Settings</button></a>
                        </div>
                    </div>

                    <div class="container">
                        <form action="become-friend" method="POST">
                            <div class="form-group row" style="color: #FFAD58">
                                <div class="col-sm-12"><b><input type="checkbox" name="asfriend" id="asfriend"> Make money as a FRIEND? <i class="fas fa-eye" style="color: #58C9EF"></i></b></div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-12" style="color: #1CCA00"><input type="checkbox" name="status" id="status"> Ready</div>
                            </div>

                            <script>
                                if ('{{friend.status}}' == 'true') {
                                    $('#status').attr('checked', 'true');
                                }
                                
                            </script>

                            <div class="form-group row">
                                <label for="price" class="control-label col-sm-2"><b>Price/h:</b></label>
                                <div class="col-sm-10"><input type="number" class="form-control" name="price" id="price" min="0" value="{{friend.price}}" required></div>
                            </div>

                            <div class="form-group row">
                                <label for="description" class="control-label col-sm-2"><b>Description:</b></label>
                                <span class="py-2 col-sm-8" style="color: gray; font-size: 0.5rem">(This will be displayed on home screen)</span>
                                <div class="col-sm-12"><textarea class="form-control" name="description" id="description" rows="5">{{friend.description}}</textarea></div>
                            </div>

                            <div class="form-group row">
                                <label for="detail" class="control-label col-sm-12"><b>Details about you:</b></label>
                                <div class="col-sm-12"><textarea class="form-control" name="detail" id="detail" rows="10">{{friend.detail}}</textarea></div>
                            </div>

                            <div class="form-group row col-sm-12 justify-content-end"><input type="submit" class="btn btn-custom-primary" value="Update"></div>
                        </form>
                    </div>

                    <script>
                        if ('{{user.role}}'.trim() === 'f') {
                            $('#asfriend').attr('checked', 'true');
                        }
                                
                    </script>
                </div>
            </div>
        </div>
    </div>