<!--Register modal-->
    <div class="modal fade" id="registermodal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-custom text-white">
                    <h3 class="modal-title">REGISTER</h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <form id="register" action="" method="POST">
                        <input type="text" name="name" class="form-control my-2" placeholder="Enter fullname" required>
                        <input type="email" name="email" class="form-control my-2" placeholder="Enter email" required>
                        <input type="text" name="registerusername" class="form-control my-2" placeholder="Enter username" required>
                        <input type="password" name="registerpassword" id="registerpassword" class="form-control my-2" placeholder="Enter password" required>
                        <input type="password" name="retype" id="retype" class="form-control my-2" placeholder="Retype password" required>
                        <input type="date" name="dateofbirth" class="form-control my-2" placeholder="Enter date of birth" required>
                        <p style="text-align: end">
                            <input type="submit" class="btn btn-custom my-2" value="REGISTER">
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>