<!--Change password modal-->
    <div class="modal fade" id="changepwmodal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-custom text-white">
                    <h3 class="modal-title">CHANGE PASSWORD</h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <form id="changepassword" action="" method="POST">
                        <input type="password" name="oldpassword" id="oldpassword" class="form-control my-2" placeholder="Enter old password" required>
                        <input type="password" name="newpassword" id="newpassword" class="form-control my-2" placeholder="Enter new password" required>
                        <input type="password" name="retypepassword" id="retypepassword" class="form-control my-2" placeholder="Retype new password" required>
                        <p style="text-align: end">
                            <input type="submit" class="btn btn-custom my-2" value="CHANGE">
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>