<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.js"></script>
    <script>
        //setting date picker
        $(document).ready(function(){
            var date_input=$('input[name="date"]');
            var container=$('.bootstrap-iso').length>0 ? $('.bootstrap-iso').parent() : "body";
            date_input.datepicker({
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            })

           //Set min date, max date
            $('#fromdate').datepicker('setStartDate','04/12/1998');
            $('#fromdate').datepicker('setEndDate', new Date(moment().format("MM/DD/YYYY")));
            $('#todate').datepicker('setEndDate', new Date(moment().format("MM/DD/YYYY")));
        })
        $("#fromdate").on("change dp.change", function (e){
            $('#todate').datepicker('setStartDate',$("#fromdate").val());
        })
    </script>